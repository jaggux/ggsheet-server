extends ../layouts/common

block content
    a(href="#", onclick="onSignOut()") Sign Out
    if user
        #user-gmail= 'Gmail: ' + user.gmail 
    form(action="/spreadsheets/sync", method="post", class="form-group", id="spreadsheetId-form")
        label(for="spreadsheetId") SpreadsheetId
        input(type="text", class="form-control", id="spreadsheetId", placeholder="Enter spreadsheetId", name="spreadsheetId")
        small(class="form-text text-muted") Use spreadsheetId to sync your sheet data with database
        button(rel="submit-btn", type="submit", class="btn btn-primary") Sync
    
    